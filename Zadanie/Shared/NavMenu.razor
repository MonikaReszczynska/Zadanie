    </MudContainer>

    <MudContainer Style="text-align: center;">
        <MudNavLink Href="/Counter" Style="background-color:white; border-radius: 10%; width:fit-content;">
            <MudIcon Icon="@Icons.Material.Outlined.StarBorder" Size="Size.Large" Style=" color: black; align-self:center" />
            <MudText Style="color:black; font-size:small;">Zadanie1</MudText>
        </MudNavLink>
        
        <MudNavLink Href="/fetchdata" Disabled="true">
            <MudIconButton Icon="@Icons.Material.Outlined.StarBorder"  Size="Size.Large" Edge="Edge.Start"  Href="/fetchdata" Style="display:flex; align-self:center; color: white; " />
            <MudText Style="color:white; font-size:small;">Zadanie2</MudText>
